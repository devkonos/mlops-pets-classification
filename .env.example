# Environment Configuration Template
# Copy to .env.local and configure for your environment

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_RELOAD=False
API_WORKERS=4

# ============================================
# ML Model Configuration
# ============================================
MODEL_TYPE=simple_cnn
MODEL_PATH=models/artifacts/simple_cnn_best.pt
DEVICE=cpu  # Change to 'cuda' if GPU available

# ============================================
# MLflow Configuration
# ============================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT=cats_vs_dogs
MLFLOW_BACKEND_STORE_URI=file:mlruns
MLFLOW_ARTIFACT_ROOT=./mlruns/artifacts

# ============================================
# Kaggle API Configuration
# ============================================
KAGGLE_USERNAME=your_username
KAGGLE_KEY=your_api_key
# Note: Also requires ~/.kaggle/kaggle.json

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# Environment
# ============================================
ENVIRONMENT=development  # development or production

# ============================================
# Database (Optional for future)
# ============================================
DATABASE_URL=sqlite:///app.db

# ============================================
# Deployment Configuration
# ============================================
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=your_username
DOCKER_PASSWORD=your_token

# Kubernetes
KUBECONFIG=~/.kube/config
K8S_NAMESPACE=mlops
K8S_CLUSTER=mlops
